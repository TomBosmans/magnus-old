<nav class="navigation" role="navigation">
  <div class='navigation__header'>
    <button class='btn navigation__button' data-toggle='navigation' data-ripple='true'>
      <i class="fa fa-bars" aria-hidden="true"></i>
    </button>
    <div class='navigation__header__title'>
      <%= "#{settings.application_name}" %>
    </div>
  </div>
  <div class='navigation__group'>
    <% Namespace.new(namespace).main_resources.each do |resource| %>
      <%= link_to(
        display_resource_name(resource),
        [namespace, resource.path],
        class: "navigation__link navigation__link--#{nav_link_state(resource)} #{resource}"
      ) %>
    <% end %>
  </div>
</nav>
